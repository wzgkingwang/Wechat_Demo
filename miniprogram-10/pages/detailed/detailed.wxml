<scroll-view class='page'>
    <!-- 列表 -->
    <view class='CircleList' wx:key='index' wx:for='{{DataSource}}'>
      <!-- 头像、昵称、内容 -->
      <view class='body-view'>
        <!-- 头像 -->
        <view class='left-view'>
          <image class='user-icon' src='{{userInfo.avatarUrl}}'></image>
        </view>
        <view class='right-view'>
          <!-- 昵称 -->
          <view class='user-name-view'>
            <label class='user-name'>{{userInfo.nickName}}</label>
          </view>
          <!-- 内容 -->
          <view class='user-content-view'>
            <text class='user-content'>{{item.Ctext}}</text>
          </view>
          <!-- 图片 -->
          <view class='photo-view'>
            <view class='photo' wx:for-item="pItem" wx:for-index='i' wx:key='i' wx:for="{{item.Cpicture}}"
              style='width:{{photoWidth}}px;height:{{photoWidth}}px'>
              <image bindtap='LookPhoto' data-photUrl='{{pItem}}' src='{{pItem}}'
                style='width:{{photoWidth}}px;height:{{photoWidth}}px'></image>
            </view>
          </view>
          <!-- 地理位置 -->
          <view class='user-address-view'>
            <label>{{item.Caddress}}</label>
          </view>

          <!-- 时间 -->
          <view class='TDD-view'>
            <label
              style="width: 268rpx; height: 40rpx; display: block; box-sizing: border-box; left: NaNrpx; top: NaNrpx">{{item.Ctime}}</label>

            <image class="img_rel" data-id="{{item.Ctime}}" data-isShow='{{isShow}}' bindtap='TouchDiscuss' src='/images/wxdiscuss.png'></image>
            <!-- 删除按钮、点赞评论 -->
            <view wx:if="{{isShow && item.Ctime===idShow}}" class="pinglun">
              <view bindtap='delete' class="delete_rel">删除</view>
              <view class="zan_rel">点赞</view>
              <view class="pinglun_rel">评论</view>
            </view>
          </view>


        </view>

      </view>
    </view>
  </scroll-view>